<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBox
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/chkThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="25dp"
        android:layout_above="@id/chkThree"
        android:id="@+id/chkTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="25dp"
        android:layout_above="@id/chkTwo"
        android:id="@+id/chkOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/skThree"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/chkThree"
        android:max="150"
        android:thumb="@drawable/h1" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/skTwo"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_above="@id/skThree"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/chkTwo"
        android:max="150"
        android:thumb="@drawable/h2" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/skOne"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_above="@id/skTwo"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/chkOne"
        android:max="150"
        android:thumb="@drawable/h3" />
    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@drawable/duaxe"
        android:layout_width="200dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/txtPoint"
        android:text="100"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#ff00"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/play"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

</RelativeLayout>